[user]
  name = Rolf Erik Lekang
  email = me@rolflekang.com

[core]
  excludesfile = ~/.files/git/gitignore
  editor = vim

[init]
	defaultBranch = main

[github]
  user = relekang

[help]
	autocorrect = 1

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[diff]
  compactionHeuristic = true

[branch]
	autosetuprebase = always

[rebase]
  autosquash = true


[alias]
  c = commit
  ca = commit -a
  cm = commit -m

  a = add .
  ai = add -i
  ap = add -p

  o = checkout
  b = branch
  f = fetch
  m = merge
  r = rebase

  re = reset
  reh = reset --hard
  rlc = reset HEAD^

  pop = reset HEAD^
  wip = "!git add . && git ca -nm'wip'"

  p = pull --rebase
  pn = pull --no-rebase
  po = pull --rebase origin

  ps = push
  psu = push -u
  pso = push origin

  st = status
  v = show
  d = diff
  dc = diff --cached

  sa = stash apply
  sc = stash clear
  sd = stash drop
  sl = stash list
  sp = stash pop
  ss = stash save
  sw = stash show

  cleanup = "!git b --merged | grep -v develop | grep -v master | grep  -v $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@') | xargs git b -d"
  delete-merged = "!git-delete-merged"
	exec = "!exec "
	recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
  main-branch = "!git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'"
  rr = "!git wip && git r -i origin/$(git main-branch) && git pop"
  om = "!git checkout $(git main-branch)"

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[push]
	default = current

[credential]
	helper = osxkeychain

[rerere]
	enabled = true

[includeIf "gitdir:~/dev/wanda/"]
  path = ~/.files/git/gitconfig-wanda
[blame]
  #ignoreRevsFile = .git-blame-ignore-revs
